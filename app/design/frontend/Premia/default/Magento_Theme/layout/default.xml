<page xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:framework:View/Layout/etc/page_configuration.xsd">
    <body>
        <referenceBlock name="top.search" remove="true" />
        <referenceBlock name="footer_links" remove="true" />
        <referenceBlock name="report.bugs" remove="true" />
        <!--<referenceBlock name="form.subscribe" remove="true" />-->
        <referenceBlock name="copyright" remove="true" />

        <move element="form.subscribe" destination="footer.top" after="-" />

        <referenceBlock name="logo">
            <arguments>
                <argument name="logo_img_width" xsi:type="number">336</argument>
                <argument name="logo_img_height" xsi:type="number">36</argument>
            </arguments>
        </referenceBlock>

        <referenceContainer name="header-wrapper">
            <block class="Magento\Framework\View\Element\Template" name="header.login.link" template="Magento_Theme::html/header/login_link.phtml" after="minicart" />
        </referenceContainer>

        <referenceContainer name="footer-container">
            <container name="footer.top" as="footer.top" label="Footer Top" htmlTag="div" htmlClass="footer top" before="footer.links">
                <block class="Magento\Cms\Block\Block" name="footer_social_links">
                    <arguments>
                        <argument name="block_id" xsi:type="string">footer-social-links</argument>
                    </arguments>
                </block>
            </container>
            <container name="footer.links" as="footer.links" label="Footer Links" htmlTag="div" htmlClass="footer links" before="footer">
                <block class="Magento\Cms\Block\Block" name="footer_links_1">
                    <arguments>
                        <argument name="block_id" xsi:type="string">footer-links-1</argument>
                    </arguments>
                </block>
                <block class="Magento\Cms\Block\Block" name="footer_links_2">
                    <arguments>
                        <argument name="block_id" xsi:type="string">footer-links-2</argument>
                    </arguments>
                </block>
                <block class="Magento\Cms\Block\Block" name="footer_links_3">
                    <arguments>
                        <argument name="block_id" xsi:type="string">footer-links-3</argument>
                    </arguments>
                </block>
            </container>
        </referenceContainer>
        <referenceContainer name="footer">
            <block class="Magento\Cms\Block\Block" name="footer_logo">
                <arguments>
                    <argument name="block_id" xsi:type="string">footer-logo</argument>
                </arguments>
            </block>
            <block class="Magento\Cms\Block\Block" name="footer_copyright">
                <arguments>
                    <argument name="block_id" xsi:type="string">footer-copyright</argument>
                </arguments>
            </block>
        </referenceContainer>
    </body>
</page>